<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="Dice roll!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="99dp"
        android:layout_marginStart="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:textSize="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="7"
        android:id="@+id/dice_number"
        android:hint="Number of dice"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="99dp"
        android:layout_marginStart="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="7"
        android:id="@+id/max_dice_value"
        android:hint="Max dice value"
        app:layout_constraintTop_toBottomOf="@+id/dice_number"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="99dp"
        android:layout_marginStart="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"/>

    <Button
        android:text="Roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roll_button"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/max_dice_value"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp"
        android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"/>

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_button"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/roll_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp"
        android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"/>

    <Button
        android:text="Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/return_button"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/clear_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp"
        android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>