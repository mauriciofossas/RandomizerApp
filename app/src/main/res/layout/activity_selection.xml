<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you wish to roll any number of dice and see statistics about the rolls, click on the following button:"
        android:padding="15dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/select_dice"
        >
    </TextView>

    <Button
        android:text="Roll dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roll_dice"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/select_dice"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp"
        android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you are having a hard time choosing a place to eat, a movie to watch or just having trouble making a decision in general enter your own values to randomize here:"
        android:padding="15dp"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/roll_dice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/select_random"
        >
    </TextView>

    <Button
        android:text="Personal randomizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other_randomizer"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/select_random"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp"
        android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>