<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RollActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valueTitle"
        android:text="Value"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="99dp"
        android:layout_marginStart="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valueOfRoll"
        android:text="You may reroll"
        app:layout_constraintTop_toBottomOf="@+id/valueTitle"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="99dp"
        android:layout_marginStart="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:textSize="40dp"/>

    <Button
        android:text="See results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/see_results_button"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/valueOfRoll"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp"
        android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp"
        android:elevation="5dp"
        android:layout_marginRight="162dp"/>

    <Button
        android:text="Reroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reroll_button"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/see_results_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp"
        android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="5dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"/>

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_button"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/reroll_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp"
        android:layout_marginStart="161dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>